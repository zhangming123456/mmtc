.share-canvas {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 1000;
  overflow: hidden;
  background-color: #feece1;
}
.share-canvas canvas.myCanvas {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.share-canvas canvas.myCanvas .azm-btn {
  position: fixed;
  width: 228rpx;
  height: 64rpx;
  line-height: 64rpx;
  background-color: #db3033;
  border: none;
  bottom: 200rpx;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  font-size: 26rpx;
  padding-left: 30rpx;
  text-align: center;
  color: #fff;
}
.share-canvas canvas.myCanvas .azm-btn cover-image {
  position: absolute;
  width: 30rpx;
  height: auto;
  top: 50%;
  left: 0;
  color: #feece1;
  transform: translateY(-50%);
}
.share-canvas .hover_canvas {
  transform: translateX(-100%);
}
