<wxs src="../../../utils/common.wxs" module="c"/>

<image class="azm-image {{nolClass}}" src="{{c.absUrl(newSrc)}}" hidden="{{!isLoad}}"
       lazy-load="{{lazyLoad}}" binderror="_bindAzmImageError" bindload="_bindAzmImageLoad"
       mode="{{mode}}" style="{{height}}"></image>
<block wx:if="{{type === 'img'}}">
    <image class="azm-image {{nolClass}}" src="../../../image/imageLoading.png"
           hidden="{{isLoad}}" mode="{{mode}}"></image>
</block>
<block wx:else>
    <image class="azm-image {{nolClass}}" src="{{c.absUrl(defineImage)}}" hidden="{{isLoad}}" mode="{{mode}}"></image>
</block>



